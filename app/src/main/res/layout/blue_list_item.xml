<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/blue_list_item_ll"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="3dp"
    android:gravity="bottom"
    android:orientation="horizontal">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingBottom="5dp">

        <TextView
            android:id="@+id/bluelist_item_name"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:gravity="center_vertical"
            android:text="布控名称"
            android:textColor="#000000"
            android:textSize="13dp" />

        <LinearLayout
            
            android:layout_width="match_parent"
            android:layout_height="16dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/bluelist_item_id"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center|left"
                android:text="标识号"
                android:textColor="#000000"
                android:textSize="11sp"></TextView>

            <TextView
                android:id="@+id/bluelist_match_status"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1.8"
                android:gravity="center|left"
                android:text="匹配状态"
                android:textColor="#000000"
                android:textSize="11sp"></TextView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="16dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/bluelist_item_time"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center|left"
                android:text="添加时间"
                android:textColor="#000000"
                android:textSize="11sp"></TextView>

            <TextView
                android:id="@+id/bluelist_connect_status"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1.8"
                android:gravity="center|left"
                android:text="连接状态"
                android:textColor="#000000"
                android:textSize="11sp"></TextView>
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/bluelist_item_tv"
        android:layout_width="65dp"
        android:layout_height="30dp"
        android:layout_marginBottom="3dp"
        android:layout_marginRight="2dp"
        android:background="@drawable/connect_selector"
        android:gravity="center"
        android:text="连接"
        android:textColor="#ffffff"
        android:textSize="12sp" />
</LinearLayout>
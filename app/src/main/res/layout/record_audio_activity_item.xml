<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/audios_ll"
    android:layout_width="match_parent"
    android:layout_height="58dp"
    android:gravity="center"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="0dp"
        android:gravity="center"
        android:layout_height="wrap_content"
        android:layout_weight="1">

        <ImageView
            android:id="@+id/startPlay_audio_iv"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/start_normal" />

        <CheckBox
            android:id="@+id/selecter_checkbox"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="5dp"
            android:visibility="gone" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:orientation="vertical">

        <TextView
            android:id="@+id/audio_file_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="2dp"
            android:text="文件名称"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/audio_file_size_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="2dp"
            android:text="文件大小"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/record_time_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="2dp"
            android:text="录制时间"
            android:textSize="10sp" />

        <com.bluetoothmicrecord.upload.uploadUtil.HProgressBar
            android:id="@+id/upload_progressbar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="10dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:gravity="center"
        android:layout_height="wrap_content"
        android:layout_weight="1">

        <TextView
            android:id="@+id/upload_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/connect_selector"
            android:padding="7dp"
            android:text="开始上传"
            android:textColor="#ffffff"
            android:textSize="10sp" />

    </LinearLayout>

</LinearLayout>
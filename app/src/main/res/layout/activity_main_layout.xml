<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<include
    android:id="@+id/title"
    android:layout_alignParentTop="true"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    layout="@layout/top_title"></include>
    <FrameLayout
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:id="@+id/main_fl"
        android:layout_below="@+id/title"
        android:layout_above="@+id/bottom_buttons_ll"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </FrameLayout>
    <LinearLayout
        android:id="@+id/bottom_buttons_ll"
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/cell_bottom"
        >

        <LinearLayout
            android:id="@+id/BluetoothList_ll"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/BluetoothList_iv"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/bluetooth_list_press" />

            <TextView
                android:id="@+id/BluetoothListName_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="侦控列表"
                android:textColor="@color/bottomBtTextColor"
                android:textSize="12sp" />
        </LinearLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/line" />

        <LinearLayout
            android:id="@+id/recordAudio_ll"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/recordAudio_iv"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/record_his_normal" />

            <TextView
                android:id="@+id/recordAudioName_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="录制音频"
                android:textColor="@android:color/white"
                android:textSize="12sp" />
        </LinearLayout>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/line" />
        <LinearLayout
            android:id="@+id/appSet_ll"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/appSet_iv"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/app_set_normal" />

            <TextView
                android:id="@+id/appSet_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="设置"
                android:textColor="@android:color/white"
                android:textSize="12sp" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>